<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <meta charset="utf-8">
    <title>Stutter.io</title>
  </head>
  <body>
    <div class="header">
      <h1>Stutter.io</h1>
      <div class="account">
        <button class="logout" onclick="logout()">Logout</button>
      </div>
    </div>
    <div class="body">
      <!-- Templates -->
    </div>

    <!-- Main Title Screen that appears when the page loads for the first time -->
    <script id="intro-screen-template" type="text/template">
      <div class="input-holder">
        <div class="words" contenteditable>
          {{{ text }}}
        </div>
      </div>
      <div class="btn-holder">
        <button id="record-btn" onclick="handleRecord()">
          <i class="fa fa-microphone" aria-hidden="true"></i>
        </button>
      </div>
      <audio id="audio" controls autoplay></audio>
    </script>

    <!-- Secondary Screen for user to input prepared speech to optimize -->
    <script id="input-script-template" type="text/template">
      <div class="input-holder">
        <textarea class="input-body" cols="40" rows="5" placeholder="insert script here..."></textarea>
      </div>
      <div id="carousel-synonyms" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators"></ol>
        <div class="carousel-inner"></div>
        <a class="left carousel-control" href="#carousel-synonyms" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-synonyms" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
      <div class="btn-holder">
        <button id="submit-btn" onclick="handleSubmit()">
          <i class="fa fa-upload" aria-hidden="true"></i>
        </button>
      </div>
      <script>

      $(document).ready(function(){
        for(var i=0 ; i< $('stuttering').data.length ; i++) {
          $('<div class="item"><div class="carousel-caption"></div>   </div>').appendTo('.carousel-inner');
          $('<div class="item"><div class="carousel-caption"></div>   </div>').text($('stuttering').data.synonyms[i]);
          $('<li data-target="#carousel-synonyms" data-slide-to="'+i+'"></li>').appendTo('.carousel-indicators');
        }
        $('.item').first().addClass('active');
        $('.carousel-indicators > li').first().addClass('active');
        $('#carousel-synonyms').carousel();
});
</script>
    </script>

    <!-- Loading Screen -->
    <script id="loading-screen" type="text/template">
      <div class="loader-holder">
        <div class="loader"></div>
      </div>
    </script>

    <!-- JavaScripts -->
    <script src="https://github.com/muaz-khan/RecordRTC/releases/download/5.4.5/RecordRTC.js"></script>
    <script src="../public/js/template.js"></script>
    <script src="../public/js/scripts.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://js.leapmotion.com/leap-0.6.2.min.js"></script>
    <script>
        const PALM_HTML	= "<div class='palm'><img src='../public/download/images/palm.png' /></div>";
        const DIP_HTML	= "<div class='dip'><img src='../public/download/images/dip.png' /></div>";
        const PIP_HTML	= "<div class='pip'><img src='..public/download/images/pip.png' /></div>";
        const MCP_HTML	= "<div class='mcp'><img src='../public/download/images/mcp.png' /></div>";
        const LABEL_HTML = "<div class='finger_label'></div>";
    </script>
    <script src="../public/js/motion.js"></script>
    <script src="../public/js/highlight.js"></script>
    <script src="../public/js/speech.js"></script>
  </body>
</html>
